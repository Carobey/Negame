{
   "database": {
       "host": "localhost",
       "port": 5432,
       "name": "gameworld",
       "user": "gameworld",
       "password": "gameworld",
       "pool": {
           "min_size": 5,
           "max_size": 20,
           "idle_timeout": 300
       }
   },
   "service": {
       "name": "gameworld",
       "version": "0.0.1"
   },
   "grpc": {
       "address": "0.0.0.0",
       "port": 50051,
       "threads": 4,
       "max_connections": 1000,
       "keepalive": {
           "time": 7200,
           "timeout": 20,
           "permit_without_stream": true
       }
   },
   "logging": {
       "level": "info",
       "file": "/var/log/gameworld/service.log",
       "console": true,
       "format": "%TimeStamp% [%ThreadID%] [%Severity%] %Message%",
       "rotation": {
           "size": 10485760,
           "time": "00:00",
           "max_files": 10
       }
   },
   "metrics": {
       "enabled": true,
       "endpoint": "/metrics",
       "port": 9090,
       "labels": {
           "service": "gameworld",
           "environment": "production"
       }
   },
   "security": {
       "tls": {
           "enabled": true,
           "cert_file": "/etc/gameworld/certs/server.crt",
           "key_file": "/etc/gameworld/certs/server.key",
           "ca_file": "/etc/gameworld/certs/ca.crt"
       },
       "authentication": {
           "enabled": true,
           "jwt": {
               "secret": "your-secret-key",
               "expiration": 3600
           }
       }
   },
   "game": {
       "physics": {
           "update_rate": 60,
           "gravity_constant": 6.67430e-11,
           "light_speed": 299792458
       },
       "limits": {
           "max_stars_per_region": 1000,
           "max_planets_per_star": 20,
           "max_entities_per_query": 100
       }
   },
   "storage": {
       "assets": {
           "path": "/var/lib/gameworld/assets",
           "max_size": 1073741824
       },
       "cache": {
           "enabled": true,
           "size": 536870912,
           "ttl": 3600
       }
   },
   "development": {
       "debug": false,
       "mock_services": false,
       "profiling": {
           "enabled": false,
           "sampling_rate": 0.01
       }
   }
}
